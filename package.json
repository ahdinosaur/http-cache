{
  "name": "http-cache",
  "version": "0.0.0",
  "description": "a Docker image to use Nginx as an HTTP proxy to cache static assets",
  "scripts": {
    "build": "docker build -t ahdinosaur/http-cache:$(jq -r .version package.json) .",
    "start": "docker run -it --rm -p 3142:3142 -v $(pwd)/cacher/log:/var/log/nginx -v $(pwd)/cacher/data:/var/cache/nginx ahdinosaur/http-cache:$(jq -r .version package.json)",
    "publish": "docker push ahdinosaur/http-cache"
  },
  "license": "AGPL-3.0"
}
